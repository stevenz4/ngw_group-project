<h1 class="flex justify-center mt-8 mb-8 text-3xl">Movies suggestions</h1>
<h2 class="flex justify-center mb-8 text-xl">Genre: {{#replace "_" " "}}{{genre}}{{/replace}}</h2>
<div>
  <table class="table-fixed w-10/12 mx-auto mb-10">
    <thead>
      <tr>
        <th>Movie</th>
        <th>Abstract</th>
        <th>Release Date</th>
        <th>Link</th>
      </tr>
    </thead>
    <tbody>
      {{#each moviesSuggestion}}
        <tr>
          <td>{{filmLabel}}</td>
          <td>{{abstract}}</td>
          <td>{{releaseDate}}</td>
          <td><a href="{{film}}">Link</a></td>
        </tr>
      {{/each}}
      {{#each moviesSuggestionBis}}
        <tr>
          <td>{{filmLabel}}</td>
          <td>{{abstract}}</td>
          <td>{{formatDate releaseDate}}</td>
          <td><a href="{{film}}">Link</a></td>
        </tr>
      {{/each}}
    </tbody>
  </table>